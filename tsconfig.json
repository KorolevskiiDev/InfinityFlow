{
  "compilerOptions": {
    "target": "es2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@examples/*": ["examples/*"],
    }
  },
  "include": ["src/**/*", "examples/**/*", "index.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.d.ts"]
}
